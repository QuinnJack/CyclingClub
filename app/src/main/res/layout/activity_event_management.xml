<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventManagementActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="151dp"
            android:layout_height="37dp"
            android:text="back" />
        <EditText
            android:id="@+id/et_event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hint_event_name"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_min_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hint_min_age"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_max_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hint_max_age"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_pace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hint_pace"
            android:inputType="text" />

        <Spinner
            android:id="@+id/spinner_event_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

        <Button
            android:id="@+id/btn_add_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/button_add_event" />

        <ListView
            android:id="@+id/list_events"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </ListView>



</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>