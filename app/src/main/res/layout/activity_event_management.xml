<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".EventManagementActivity">

    <data>
        <variable name="eventType"
            type="edu.uottawa.seg2105_final_grp12.models.data.EventType"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:text="back" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorOnSurfaceInverse"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/colorOnSurfaceInverse"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinner_event_type"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/btn_add_event"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/button_add_event" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/field_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/colorOnSurfaceInverse"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:theme="@style/event_field">

                        <LinearLayout android:id="@+id/field_min_age"
                            android:visibility="@{eventType}">
                            <TextView android:text="@string/label_min_age"/>
                            <EditText android:hint="@string/hint_min_age"/>
                        </LinearLayout>
                        <LinearLayout android:id="@+id/field_max_age"
                            android:visibility="@{eventType}">
                        <TextView android:text="@string/label_max_age"/>
                            <EditText android:hint="@string/hint_max_age"/>
                        </LinearLayout>
                        <LinearLayout android:id="@+id/field_pace"
                            android:visibility="@{eventType}">
                            <TextView android:text="@string/label_pace"/>
                            <EditText android:hint="@string/hint_pace"/>
                        </LinearLayout>
                        <LinearLayout android:id="@+id/field_duration"
                            android:visibility="@{eventType}">
                            <TextView android:text="@string/label_duration"/>
                            <EditText android:hint="@string/hint_duration"/>
                        </LinearLayout>
                        <LinearLayout android:id="@+id/field_distance"
                            android:visibility="@{eventType}">
                            <TextView android:text="@string/label_distance"/>
                            <EditText android:hint="@string/hint_distance"/>
                        </LinearLayout>
                        <LinearLayout android:id="@+id/field_max_participants"
                            android:visibility="@{eventType}">
                            <TextView android:text="@string/label_max_participants"/>
                            <EditText android:hint="@string/hint_max_participants"/>
                        </LinearLayout>
                        <LinearLayout android:id="@+id/field_fee"
                            android:visibility="@{eventType}">
                            <TextView android:text="@string/label_fee"/>
                            <EditText android:hint="@string/hint_fee"/>
                        </LinearLayout>
                        <LinearLayout android:id="@+id/field_participants"
                            android:visibility="@{eventType}">
                            <TextView android:text="@string/label_participants"/>
                            <EditText android:hint="\?\?\?"/>
                        </LinearLayout>
                        <LinearLayout android:id="@+id/field_min_skill_level"
                            android:visibility="@{eventType}">
                            <TextView android:text="@string/label_min_skill_level"/>
                            <Spinner android:entries="@array/min_skill_level_entries"/>
                        </LinearLayout>
                        <LinearLayout android:id="@+id/field_difficulty"
                            android:visibility="@{eventType}">
                            <TextView android:text="@string/label_difficulty"/>
                            <Spinner android:entries="@array/difficulty_entries"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <ListView
                android:id="@+id/list_events"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
